<div class="outline-box">
 <div class="top-hero-container font-default">
  <div class="content-new-wrapper" >
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center" "title_letter">ファイルアップロード</h1>
        
      
          <%= form_with(model: @content, local: true) do |form| %>
          <%= form.hidden_field :medium_id %>
          <div class="form-group">
            <%= form.file_field :video %>
          </div>  
          
          <div class="form-group">
             <%= @medium.language %>
             <%= @medium.category %>
          </div>

          <div class="form-group">
            <%= form.label :description, "description" %>
            <%= form.text_area :description, class: 'form-control' %>
          </div>

            <%= form.submit '送信', class: "btn-white" %>
            <% end %>
          
        </div>
       </div>
      </div>
    </div>
  </div>
</div>