<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">ファイルアップロード</h1>
        <%= form_for @upload do |f| %>
          <div class="form-group">
            <%= f.label :content %>
            <%= f.file_field :content%>
          </div>

          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>

          <%= f.submit '投稿' class: "btn-white" %>

        <% end %>
      </div>
    </div>
  </div>
</div>
